<!-- $Id$ -->

[% IF url %]
<h1>[%|l(visible_path)%]Edition of the bookmark %1[%END%]</h1>
[% ELSIF directory %]
<h1>[%|l(visible_path)%]Edition of the directory %1[%END%]</h1>
[% ELSE %]
<h1>[%|l(visible_path)%]Edition of the file %1[%END%]</h1>
[% END %]
    [%|l(doc_owner)%]Owner : %1[%END%] <br />
    [%|l(doc_date)%]Last update : %1[%END%] <br />
    [%|l(desc)%]Description : %1[%END%] <br /><br />
<h3><a href="[% path_cgi %]/d_read/[% list %]/[% escaped_father %]"> <img style="border: 0px; vertical-align: bottom;" src="[% father_icon %]"> [%|l%]Up to higher level directory[%END%] </a></h3>

<table cellspacing="15">

  [% IF !directory %]
  <tr>
  <form method="post" action="[% path_cgi %]" enctype="multipart/form-data">
  <td style="text-align: right;" valign="bottom">
  [% IF url %]
  <label><strong> [%|l%]Bookmark URL[%END%] </strong><br /> 
  <input name="url" value="[% url %]" /></label>
  [% ELSE %]
  <label><strong> [%|l(visible_path)%]Replace the file %1 by your file[%END%] </strong><br /> 
  <input type="file" name="uploaded_file" /></label>
  [% END %]
  </td>
  <td style="text-align: left;" valign="bottom"> 
  [% IF url %]
  <input type="submit" value="[%|l%]Modifier[%END%]" name="action_d_savefile" />
  [% ELSE %]
  <input type="submit" value="[%|l%]Publish[%END%]" name="action_d_overwrite" />
  [% END %]
  <input type="hidden" name="list" value="[% list %]" />
  <input type="hidden" name="path" value="[% path %]" />
  <input type="hidden" name="serial" value="[% serial_file %]" />
  </td>
  </form>
  </tr>
  [% END %]

  <tr>
  <form action="[% path_cgi %]" method="post">
  <td style="text-align: right;" valign="bottom">
  <label>
  [% IF directory %]
  <strong> [%|l(visible_path)%]Describe the directory %1[%END%]</strong><br />
  [% ELSE %]
  <strong> [%|l(visible_path)%]Describe the file %1[%END%]</strong><br />
  [% END %]
  <input size="50" maxlength="100" name="content" value="[% desc %]" />
  </label>
  <input type="hidden" name="list" value="[% list %]" />
  <input type="hidden" name="path" value="[% path %]" />
  <input type="hidden" name="serial" value="[% serial_desc %]" />
  <input type="hidden" name="action" value="d_describe" />
  </td>
  <td style="text-align: left;" valign="bottom">
  <input size="50" maxlength="100" type="submit" name="action_d_describe" value="[%|l%]Apply[%END%]" />
  </td>
  </form>
  </tr>

  <tr>
  <form action="[% path_cgi %]" method="post">
  <td style="text-align: right;" valign="bottom">
  <label>
  [% IF directory %]
  <strong> [%|l(visible_path)%]Rename directory %1[%END%]</strong><br />
  [% ELSE %]
  <strong> [%|l(visible_path)%]Rename file %1[%END%]</strong><br />
  [% END %]
  <input size="50" maxlength="100" name="new_name" />
  </label>
  <input type="hidden" name="list" value="[% list %]" />
  <input type="hidden" name="path" value="[% path %]" />
  <input type="hidden" name="serial" value="[% serial_desc %]" />
  <input type="hidden" name="action" value="d_rename" />
  </td>
  <td style="text-align: left;" valign="bottom">
  <input size="20" maxlength="50" type="submit" name="action_d_rename" value="[%|l%]Rename[%END%]" />
  </td>
  </form>
  </tr>

</table>
<br />
<br />

[% IF !url %]
[% IF textfile %]
  <form action="[% path_cgi %]" method="post">
  <label><strong> [%|l(visible_path)%]Edit the file %1[%END%]</strong><br />
  <textarea name="content" cols="80" rows="25">
[% INSERT $filepath IF filepath %]
  </textarea></label><br />
  <input type="hidden" name="list" value="[% list %]" />
  <input type="hidden" name="path" value="[% path %]" />
  <input type="hidden" name="serial" value="[% serial_file %]" />
  <input type="submit" name="action_d_savefile" value="[%|l%]Publish[%END%]" />
  </form>
[% END %]
[% END %]




