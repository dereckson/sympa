<!-- $Id$ -->


<form action="[% path_cgi %]" method="post">


<table>
 <tr>
   <tr style="white-space: nowrap;"><label for="listname"><strong>[%|l%]List name:[%END%]</strong></label></th>
   <td><input type="text" id="listname" name="listname" size="30" VALUE="[% saved.listname %]" /></td>
   <td><img src="[% icons_url %]/unknown.png" alt="[%|l%]the list name ; be careful, not its address ![%END%]" /></td>
 </tr>
 
 <tr>
   <th style="white-space: nowrap;"><strong>[%|l%]Owner:[%END%]</strong></th>
   <td><em>[% user.email %]</em></td>
   <td><img src="[% icons_url %]/unknown.png" alt="[%|l%]You are the privileged owner of this list[%END%]" /></td>
 </tr>

 <tr>
   <th valign="top" style="white-space: nowrap;"><strong>[%|l%]List type :[%END%]</strong></th>
   <td>
     <ul>
  [% FOREACH template = list_list_tpl %]
      <li>
     <label><input type="radio" name="template" value="[% template.key %]"
     [% IF template.valuye.selected %]
       checked="checked"
     [% END %]
     /> [% template.key %]</label><br />
     <blockquote>
     [% PROCESS $template.value.comment IF template.value.comment %]
     </blockquote>
     </li>
  [% END %]
     </ul>
    </td>
    <td valign="top"><img src="[% icons_url %]/unknown.png" alt="[%|l%]The list type is a set of parameters' profile. Parameters will be editable, once the list created[%END%]" /></td>
 </tr>
 <tr>
   <th style="white-space: nowrap;"><label for="subject"><strong>[%|l%]Subject:[%END%]</strong></label></th>
   <td><input type="text" name="subject" id="subject" size="60" value="[% saved.subject %]" /></td>
   <td><img src="[% icons_url %]/unknown.png" alt="[%|l%]The list's subject[%END%]" /></td>
 </tr>
 <tr>
   <th style="white-space: nowrap;"><label for="topics"><strong>[%|l%]Topics:[%END%]</strong></label></th>
   <td><select id="topics" name="topics">
	<option value="">[%|l%]--Select a topic--[%END%]</option>
	[% FOREACH topic = list_of_topics %]
	  <option value="[% topic.key %]"
	  [% IF topic.value.selected %]
	    selected="selected"
	  [% END %]
	  >[% topic.value.current_title %]</option>
	  [% IF topic.value.sub %]
	  [% FOREACH subtopic = topic.value.sub %]
	     <option value="[% topic.key %]/[% subtopic.key %]">[% topic.value.current_title %] / [% subtopic.value.current_title %]</option>
	  [% END %]
	  [% END %]
	[% END %]
	<option value="other">[%|l%]Other[%END%]</option>
     </select>
   </td>
   <td valign="top"><img src="[% icons_url %]/unknown.png" alt="[%|l%]List classification in the directory[%END%]" /></td>
 </tr>

 <tr>
   <th valign="top" style="white-space: nowrap;"><label for="info"><strong>[%|l%]Description:[%END%]</strong></label></th>
   <td><textarea cols="60" rows="10" id="info" name="info">[% saved.info %]</textarea></td>
   <td valign="top"><img src="[% icons_url %]/unknown.png" alt="[%|l%]A few lines describing the list[%END%]" /></td>
 </tr>

 <tr>
   <td colspan="2" style="text-align: center;">
    <table>
     <tr>
      <td style="background: [% light_color %];">
<input type="submit" name="action_create_list" value="[%|l%]Submit your creation request[%END%]" />
      </td>
     </tr></table>
</td></tr>
</table>



</form>




